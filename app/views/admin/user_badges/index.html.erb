<p id="notice"><%= notice %></p>

<h1>User Badges</h1>

<table class="table">
  <thead>
    <tr>
      <th>Badge</th>
      <th>User</th>
      <th>Count</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_badges.each do |user_badge| %>
      <tr>
        <td><%= user_badge.badge %></td>
        <td><%= user_badge.user %></td>
        <td><%= user_badge.count %></td>
        <td><%= image_tag user_badge.badge.image_url, size: '20x20' %></td>
        <td><%= link_to 'Show', admin_user_badge_path(user_badge) %></td>
        <td><%= link_to 'Edit', edit_admin_user_badge_path(user_badge) %></td>
        <td><%= link_to 'Destroy', admin_user_badge_path(user_badge), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Badge', new_admin_user_badge_path %>
