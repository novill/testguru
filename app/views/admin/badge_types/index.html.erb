<p id="notice"><%= notice %></p>

<h1>Badge Types</h1>
<div class="container"></div>
  <table class="table">
    <thead>
      <tr>
        <th>Type</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @badge_types.each do |badge_type| %>
        <tr>
          <td><%= badge_type.b_type %></td>
          <td><%= badge_type.name %></td>
          <td><%= link_to 'Show', admin_badge_type_path(badge_type) %></td>
          <td><%= link_to 'Edit', edit_admin_badge_type_path(badge_type) %></td>
          <td><%= link_to 'Destroy', admin_badge_type_path(badge_type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Badge Type', new_admin_badge_type_path %>
