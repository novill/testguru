<div class="container">
  <h1><%= t('.header') %></h1>

  <table class="table table-sm">
    <thead class="thead-dark">
      <tr>
        <th class="sort-by-title pointer" >
          <%= Test.human_attribute_name(:title) %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>

        <th scope="col"><%= Test.human_attribute_name(:level) %> </th>
        <th scope="col"><%= Test.human_attribute_name(:category) %> </th>
        <th scope="col"><%= Test.human_attribute_name(:author) %> </th>
        <th><%= t('.questions') %></th>
        <th colspan="3"><%= t('.actions') %></th>
      </tr>
    </thead>

    <tbody>
      <%= render @tests %>
    </tbody>
  </table>

  <br>

  <%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-primary" %>
</div>