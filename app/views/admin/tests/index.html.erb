<div class="container">
  <h1><%= t('.header') %></h1>

  <table class="table table-sm">
    <thead class="thead-dark">
      <tr>
        <% humanize_attribute_names(%i[title level category author]).each do |field_name| %>
          <th  scope="col"><%= field_name %></th>
        <% end %>
        <th><%= t('.questions') %></th>
        <th colspan="3"><%= t('.actions') %></th>
      </tr>
    </thead>

    <tbody>
      <%= render @tests %>
    </tbody>
  </table>

  <br>

  <%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-primary" %>
</div>