<%= form_with(model: [:admin, badge], local: true) do |form| %>
  <% if badge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(badge.errors.count, "error") %> prohibited this badge from being saved:</h2>

      <ul>
      <% badge.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :badge_type %>
    <%= form.collection_select :badge_type_id, BadgeType.all, :id, :name, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active %>
  </div>

  <div class="field">
    <%= form.label :image_url %>
    <%= form.text_field :image_url %>
  </div>

  <div class="field">
    <%= form.label :object_type %>
    <%= form.select :object_type, Badge::ALLOWED_OBJECT_TYPES %>
  </div>

  <div class="field">
    <%= form.label :object_id %>
    <%= form.number_field :object_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
