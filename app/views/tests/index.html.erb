<h1><%= t('.header') %></h1>

<table class="table table-striped table-bordered table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th class="sort-by-title pointer" >
        <%= Test.human_attribute_name(:title) %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th scope="col"><%= Test.human_attribute_name(:level) %> </th>
      <th scope="col"><%= Test.human_attribute_name(:category) %> </th>
      <th scope="col"><%= Test.human_attribute_name(:author) %> </th>
      <th scope="col"> Длительность, мин</th>
      <th><%= t('.questions') %></th>
      <th><%= t('.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <%= render @tests %>
  </tbody>
</table>
<br>
